.post {
  margin: 1em auto;
  padding: 30px 50px;
  background-color: #fff;
  border: 1px solid #ddd;
  box-shadow: 0 0 2px #ddd;
  img{
    max-width: 100%;
  }
  .post-title {
    font-size: 1.5em;
    border-bottom: 2px dashed #ffc0cb
    margin-bottom: 10px
    h2.title {
      display: block
      font-weight: bold;
      color: #ee1289;
      text-shadow: #efefef 1px 1px, #fff0f5 3px 3px;
      text-decoration: none;
      font-size: 34px
      margin: 10px 0
      border-bottom: 0
    }
    p{
      border-radius: 3px
      color: #fff
      padding: 3px 10px
      display: inline-block
      background-color: #22c3aa
    }
  }
  .post-meta{
    position:relative
    .post-time{
      position: absolute
      right: 0
      top: -40
      color: #337ab7
    }
  }
}
.posts  {
  margin-top: 6em
  .post{
    position: relative
  }
  .post:first-child {
    margin-top: 0;
  }

  .post-title {
    font-size: 1.5em;
    border-bottom: 2px dashed #ffc0cb
    margin-bottom: 20px
    .post-title-link {
      display: block
      font-weight: bold;
      color: #ee1289;
      text-shadow: #efefef 1px 1px, #fff0f5 3px 3px;
      text-decoration: none;
      font-size: 34px
      margin: 10px 0
    }
    p{
      border-radius: 3px
      color: #fff
      padding: 3px 10px
      display: inline-block
      background-color: #22c3aa
    }
  }

  .post-content {
    a {
      color: #368CCB;
      text-decoration: none;
    }
    p{
      img{
        width: 90%
        display: block
        margin: 0 auto
        height: auto
        padding: 20px 0
      }
    }
  }

  .post-meta {
    width: 180px
    height: 40px
    content: " "
    margin-left: -90px
    border: 1px solid rgba(200,200,200,0.8)
    background: rgba(254,254,254,0.6)
    -moz-box-shadow: 0px 0 3px rgba(0,0,0,0.1)
    -webkit-box-shadow: 0px 0 3px rgba(0,0,0,0.1)
    box-shadow: 0px 0 3px rgba(0,0,0,0.1)
    -moz-transform: rotate(-10deg)
    -webkit-transform: rotate(-10deg)
    -o-transform: rotate(-10deg)
    transform: rotate(-10deg)
    position: absolute
    left: 50%
    top: -20px
    color: #BABABA
    .post-time{
      position: absolute
      transform: rotate(10deg)
      color: #ee2830
      top: 50%
      left: 50%
      margin-top: -6px
      margin-left: -46px
      font-size: 16px
    }
  }
}

@media(max-width: 480px){
  .posts{
    margin-top: 10em
    .post-title{
      .post-title-link{
        font-size:28px
      }
    }
    .post{
      .post-content{
        h2{
          font-size: 23px!important
        }
        h3{
          font-size: 18px!important
        }
        p{
          img{
            width:100%
            width: 100%
          }
        }
      }
    }
  }
  .post{
    padding: 30px 10px
    table{
      td{
        padding: 0
      }
    }
  }
}
